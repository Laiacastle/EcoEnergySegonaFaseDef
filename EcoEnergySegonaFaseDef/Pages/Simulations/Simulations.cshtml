
@page
@model EcoEnergySegonaFaseDef.Pages.Simulations.SimulationsModel
@{
    ViewData["Title"] = "Llistat de simulacions";
}

<h1>Llista de simulacions</h1>

<table class="table">
    <thead>
        <tr>
            <th>Hores de sol / Velocitat del vent / cabal d'aigua</th>
            <th>Rati</th>
            <th>Preu</th>
            <th>Cost</th>
            <th>Data</th>
            <th>Tipus de Simulació</th>
            <th>Result</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var energia in Model.sistems)
        {
            <tr>
                <td>@energia.Value</td>
                <td>@energia.Rati</td>
                <td>@energia.Preu</td>
                <td>@energia.Cost</td>
                <td>@energia.GetDate</td>
                <td>@energia.GetType()</td>
                <td>@energia.CalcEnergia()</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="AddSimulation" class="btn btn-primary">Afegir nova simulació</a>